; NekoMake build script for nekosys
;

; Constants
CCFLAGS = -std=gnu++11 -ffreestanding -mno-red-zone -fno-exceptions -nostdlib -Wall -Wextra -fno-pie -O2 -mgeneral-regs-only

; Tools
[asm, multi]:
    nasm -f {format=bin} {input} -o {output}

[kcc, single]:
    neko-gcc {input} -o {output} -T kernel.ld {CCFLAGS} {include}

[cc, single]:
    neko-gcc -c {input} -o {output} {CCFLAGS} {include}

; Targets
default:
    % clean
    % bootloader
    % kernel

image:
    nkimg -s build/boot.bin -l build/loader.bin -k build/NEKOKRNL -o build/neko.img

qemu:
    % image
    qemu-system-i386 -m 256 -drive format=raw,file=build/neko.img -usb -vga std -no-reboot

run:
    % default
    % qemu

clean:
    rm -rf build/
    mkdir build/
    mkdir build/intermediate

bootloader:
    [asm]
        input: boot/*.asm
        output: build/~.bin

kernel:
    [asm]
        input: kernel/**.asm
        format: elf32
        output: build/intermediate/~.o

    [kcc]
        input: build/intermediate/*.o
               kernel/**.cpp
               kernel/**.c
               libc/**.c
               libc/**.cpp

        include: -I kernel/include
                 -I libc/include
                 -I nekolib

        output: build/NEKOKRNL
